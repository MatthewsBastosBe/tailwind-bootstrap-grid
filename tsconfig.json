{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "declaration": true,
    "emitDeclarationOnly": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["lib"]
}
